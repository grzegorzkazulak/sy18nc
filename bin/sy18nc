#!/usr/bin/env ruby
require_relative "../lib/sy18nc"

require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: sy18nc [options]"

  opts.on("-b", "--backup", "Create backup") do |b|
    options[:backup] = b
  end
end.parse!

# translations = Dir["#{Sy18nc.config.locales_dir}/*.yml"].group_by { |x| x[/[a-zA-Z]+/] }.values

# translations.each do |t|
#   puts (t.delete_if { |data| data.match(/en/) } << t)
# end

synchronizer = Sy18nc::Synchronizer.new(*ARGV, options)
synchronizer.synchronize_all
